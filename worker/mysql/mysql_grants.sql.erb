# Borrowed from the Travis CI MySQL configuration

GRANT SELECT, INSERT, UPDATE, DELETE, CREATE, DROP, RELOAD, SHUTDOWN, PROCESS, FILE, REFERENCES, INDEX, ALTER, SHOW DATABASES, SUPER, CREATE TEMPORARY TABLES, LOCK TABLES, EXECUTE, REPLICATION SLAVE, REPLICATION CLIENT ON *.* TO 'debian-sys-maint'@'localhost' IDENTIFIED BY '' WITH GRANT OPTION;
# Grant replication for a slave user.
GRANT REPLICATION SLAVE ON *.* TO 'repl'@'%' identified by '';

# Set the server root password. This should be preseeded by the package installation.
SET PASSWORD FOR 'root'@'localhost' = PASSWORD('');

# CI user has all the privileges in the world, blank password and well-known hardcoded usernames.
# This is certainly good enough because virtualbox VMs CI happens in are rolled back after each build.

CREATE USER 'travis'@'%' IDENTIFIED BY '';  GRANT ALL PRIVILEGES ON *.* TO 'travis'@'%';
CREATE USER 'testpilot'@'%' IDENTIFIED BY '';  GRANT ALL PRIVILEGES ON *.* TO 'testpilot'@'%';
CREATE USER 'ubuntu'@'%' IDENTIFIED BY ''; GRANT ALL PRIVILEGES ON *.* TO 'ubuntu'@'%';
CREATE USER 'rails'@'%' IDENTIFIED BY '';  GRANT ALL PRIVILEGES ON *.* TO 'rails'@'%';
